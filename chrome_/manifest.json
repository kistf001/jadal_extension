{
  
  "manifest_version": 2,  

  "name": "jadal",
  "version": "0.0.0.2",
  "description": "유튜브와 니코니코동화에서 자막을 사용할 수 있습니다.",
   
  "background": {
    "scripts": ["jquery-3.4.1.min.js","background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "jadal!!",
    "default_icon": "icon.png",
    "default_popup": "main.html"
  },

  "icons":{
    "16":"icon-yellow.png",
    "128":"128.png"
    },

  "permissions": [
      "activeTab",
      "storage",
      "https://www.youtube.com/*",
      "https://www.nicovideo.jp/*",
      "https://lylics390001.duckdns.org/*",
      "http://lyrics.alsong.co.kr/alsongwebservice/service1.asmx"
  ]

}